@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "All Employees";
}
<h1>All Employees</h1>
<br />
<br />
<a asp-action="Create" class="btn btn-primary"> Create New Employee</a>
<div class="row justify-content-center align-items-center mt-5">
    <form asp-action="Index" class="row col-8 offset-1">
        <div class="col-8">
            <input type="search" class="form-control" name="Searchvalue" placeholder="search By Name"/>
        </div>
        <div class="col-4">
            <input type="submit" class="btn btn-success" value="Search" />
        </div>
    </form>
</div>
@if (Model.Count() > 0)
{
    <table class="mt-3 table table-striped table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(d => d.Name)</td>
                <td>@Html.DisplayNameFor(d => d.Age)</td>
                <td>@Html.DisplayNameFor(d => d.Address)</td>
                <td>@Html.DisplayNameFor(d=>d.Image)</td>
                <td>@Html.DisplayNameFor(p=>p.Department)</td>
                <td>@Html.DisplayNameFor(d => d.Salary)</td>
                <td>@Html.DisplayNameFor(d => d.IsActive)</td>
                <td>@Html.DisplayNameFor(d => d.Email)</td>
                <td>@Html.DisplayNameFor(d => d.Phone)</td>
                <td>@Html.DisplayNameFor(d => d.HireDate)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var emp in Model)
            {
                <tr>
                    <td>@emp.Name</td>
                    <td>@emp.Age</td>
                    <td>@emp.Address</td>
                    <td>
                        <img src="~/files/images/@emp.ImageName" class="img-fluid rounded"  alt="ppp" height="30" />
                    </td>
                    <td>@emp.Department?.Name</td>
                    <td>@emp.Salary</td>
                    <td>@emp.IsActive</td>
                    <td>@emp.Email</td>
                    <td>@emp.Phone</td>
                    <td>@emp.HireDate.Date </td>
                    <partial name="_ButtonsPartialView" model="@emp.Id" />
                </tr>
            }
        </tbody>
    </table>
}

else
{
    <div class="mt-3 alert alert-warning">
        <h3>
            There Is no Employee
        </h3>
    </div>
}

